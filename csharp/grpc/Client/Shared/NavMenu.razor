<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">GrpcWebBlazorWasm</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <AuthorizeView Roles="Administrators">
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="addroles">
                        <span class="oi oi-lock-locked" aria-hidden="true"></span> Roles
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="Searchandadd">
                        <span class="oi oi-bullhorn" aria-hidden="true"></span> Searchandadd
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="Users">
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="TouristRoutes">
                        <span class="oi oi-bullhorn" aria-hidden="true"></span>TouristRoutes
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
